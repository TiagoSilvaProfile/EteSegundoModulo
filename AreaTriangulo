import java.util.Scanner;

public class AreaTriangulo {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        double altura;
        double base;
        double area;

// Entrada de dados
        System.out.println("Informe qual a altura");
        altura = sc.nextDouble();
        System.out.println("Informe qual a base");
        base = sc.nextDouble();

// Processamento calculando a area do triangulo

        area = altura*base/2;

        System.out.println("O valor da area Ã© de "+area);


    }
}
