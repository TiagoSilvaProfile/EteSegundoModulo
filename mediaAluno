package com.company;

import java.util.Scanner;

public class mediaAluno {

    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);

        String aluno;
        double primeiraNota;
        double segundaNota;
        double terceiraNota;
        double quartaNota;
        double media;

        System.out.println("Qual o seu nome:\n");
        aluno = sc.nextLine();

        System.out.println("Digite a primeira nota:\n");
        primeiraNota = sc.nextDouble();
        System.out.println("Digite a segunda nota:\n");
        segundaNota = sc.nextDouble();
        System.out.println("Digite a terceira nota:\n");
        terceiraNota = sc.nextDouble();
        System.out.println("Digite a quarta nota:\n");
        quartaNota = sc.nextDouble();

        media = (primeiraNota+segundaNota+terceiraNota+quartaNota)/4;

        System.out.println("Olá "+aluno+" sua média foi  "+media);

    }
}
